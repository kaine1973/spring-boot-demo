<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rk.dao.ArticleDao">
    <select id="queryArticlesByUserId" parameterType="int" resultType="rk.po.WebArticle">
        SELECT * FROM web.web_article where userId = #{userId} and is_del = 0;
    </select>
    <insert id="insert" parameterType="rk.po.WebArticle">
        insert into web_article (title,content,createDate,updateDate,userId) values (#{title},#{content},now(),now(),#{userId})
    </insert>
    <update id="deleteById" parameterType="int">
        update web_article set is_del = 1 where id=#{id}
    </update>
</mapper>