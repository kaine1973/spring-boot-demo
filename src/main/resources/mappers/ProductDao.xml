<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rk.dao.ProductDao">
    <resultMap id="categoryOfParent" type="rk.po.ProductCategory">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="category_name"  jdbcType="VARCHAR" property="categoryName"/>
        <result column="parent_id" jdbcType="INTEGER" property="parentId"/>
    </resultMap>

    <resultMap id="productInformation" type="rk.po.Product">
        <id column="id" jdbcType="INTEGER" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="brand"  jdbcType="VARCHAR" property="brand"/>
        <result column="model"  jdbcType="VARCHAR" property="model"/>
        <result column="product_unit"  jdbcType="VARCHAR" property="productUnit"/>
        <result column="product_serial"  jdbcType="VARCHAR" property="productSerial"/>
        <result column="category_id" jdbcType="INTEGER" property="categoryId"/>
        <result column="create_date" javaType="java.util.Date" jdbcType="TIMESTAMP" property="createDate"/>
        <collection property="productSpecifications"  ofType="rk.po.ProductSpecification">
            <id column="specification_id"  jdbcType="INTEGER"  property="id"/>
            <result column="product_id" jdbcType="INTEGER" property="productId"/>
            <result column="specification_name"   jdbcType="VARCHAR"  property="specificationName"/>
            <result column="price"   jdbcType="DECIMAL"  property="price"/>
            <result column="amount" jdbcType="INTEGER" property="amount"/>
        </collection>
    </resultMap>

<!--    <resultMap id="specification" type="rk.po.ProductSpecification">-->
<!--    </resultMap>-->

<!--    <sql id="select">-->
<!--                -->
<!--    </sql>-->

    <select id="queryByParams" resultMap="productInformation" resultType="rk.po.Product" parameterType="rk.query.ProductQuery">
        select
        A.id,
        A.product_name,
        A.brand,
        A.model,
        A.product_unit,
        A.product_serial,
        A.category_id,
        A.create_date,
        B.id as specification_id,
        B.product_id as product_id,
        B.specification_name as specification_name,
        B.price as price,
        B.amount as amount
        from crm.product as A left join crm.product_specification as B on A.id = B.product_id
        <where>
            A.user_id = #{userId,jdbcType=INTEGER,javaType=Integer}
            <if test="null != productName and '' != productName">
             and A.product_name like concat('%',#{productName,jdbcType=VARCHAR,javaType=String},'%')
            </if>
            <if test="null != brand and '' != brand">
                and A.brand like concat('%',#{brand,jdbcType=VARCHAR,javaType=String},'%')
            </if>
            <if test="null != model and '' != model">
                and A.model like concat('%',#{model,jdbcType=VARCHAR,javaType=String},'%')
            </if>
            <if test="null != categoryId and '' != categoryId">
                and A.category_id like concat('%',#{categoryId,jdbcType=INTEGER,javaType=Integer},'%')
            </if>
            <if test="null != createDate and '' != createDate">
                and A.create_date &lt;= #{createDate,jdbcType=TIMESTAMP,javaType=Date}
            </if>
        </where>
        GROUP BY A.id
    </select>

    <select id="queryById" resultMap="productInformation" resultType="rk.po.Product" >
        select
            A.id,
            A.product_name,
            A.brand,
            A.model,
            A.product_unit,
            A.product_serial,
            A.category_id,
            A.create_date,
            B.id as specification_id,
            B.product_id as product_id,
            B.specification_name as specification_name,
            B.price as price,
            B.amount as amount
        from crm.product as A left join crm.product_specification as B on A.id = B.product_id
        where A.id = #{id} and A.user_id = #{userId}
        GROUP BY A.id
    </select>

    <insert id="insertProduct"
            useGeneratedKeys="true"
            parameterType="rk.po.Product"
            keyProperty="productId"
            keyColumn="id">
        insert into product
            <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="userId != null">
                    user_id,
                </if>
                <if test="brand != null">
                    brand,
                </if>
                <if test="productUnit != null">
                    product_unit,
                </if>
                <if test="productSerial != null">
                    product_serial,
                </if>
                <if test="productName != null">
                    product_name,
                </if>
                <if test="model != null">
                    model,
                </if>
                <if test="categoryId != null">
                    category_id,
                </if>
                <if test="createDate != null">
                    create_date,
                </if>
                <if test="updateDate != null">
                    update_date,
                </if>
            </trim>
            <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
                <if test="userId != null">
                    #{userId,jdbcType=INTEGER},
                </if>
                <if test="brand != null">
                    #{brand,jdbcType=VARCHAR},
                </if>
                <if test="productUnit != null">
                    #{productUnit,jdbcType=VARCHAR},
                </if>
                <if test="productSerial != null">
                    #{productSerial,jdbcType=VARCHAR},
                </if>
                <if test="productName != null">
                    #{productName,jdbcType=VARCHAR},
                </if>
                <if test="model != null">
                    #{model,jdbcType=VARCHAR},
                </if>
                <if test="categoryId != null">
                    #{categoryId,jdbcType=VARCHAR},
                </if>
                <if test="createDate != null">
                    #{createDate,jdbcType=TIMESTAMP},
                </if>
                <if test="updateDate != null">
                    #{updateDate,jdbcType=TIMESTAMP},
                </if>
            </trim>
    </insert>

    <insert id="insertproductSpecifications" parameterType="java.util.List">
        insert into product_specification (product_id, specification_name, price, amount)
        VALUES
        <foreach collection="list" item="productSpecification" separator=",">
            (#{productSpecification.productId,jdbcType=INTEGER},
                #{productSpecification.specificationName,jdbcType=VARCHAR},
                #{productSpecification.price,jdbcType=VARCHAR},
                #{productSpecification.amount,jdbcType=INTEGER})
        </foreach>
    </insert>

    <select id="selectCategoryOfLevel" resultMap="categoryOfParent" resultType="java.lang.String" parameterType="java.lang.Integer">
        select *
        from crm.product_category
        where parent_id = #{parentId}
    </select>

</mapper>