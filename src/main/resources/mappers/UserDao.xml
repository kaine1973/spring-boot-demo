<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rk.dao.UserDao">

    <insert id="insert" parameterType="rk.po.WebUser">
        insert into web_user(userName,userPwd) values (#{userName},#{userPwd})
    </insert>

    <update id="updateById" parameterType="rk.po.WebUser" >
        update web_user
        <set>
            <if test="#{nick != null}" >
                nick = #{nick},
            </if>
            <if test="#{mood != null }" >
                mood = #{mood},
            </if>
            <if test="#{userPwd != null}" >
                userPwd = #{userPwd},
            </if>
            <if test="#{age != null}" >
                age = #{age},
            </if>
            <if test="#{headFileName != null}" >
                headFileName = #{headFileName},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>